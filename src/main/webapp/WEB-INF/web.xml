<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
    version="3.0">
  <servlet>
    <servlet-name>EnvironmentServlet</servlet-name>
    <servlet-class>com.cxyz.check.web.servlet.EnvironmentServlet</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>UserServlet</servlet-name>
    <servlet-class>com.cxyz.check.web.servlet.UserServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>CheckServlet</servlet-name>
    <servlet-class>com.cxyz.check.web.servlet.CheckServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>Statistic</servlet-name>
    <servlet-class>com.cxyz.check.web.servlet.StatisticServlet</servlet-class>
  </servlet>



  <servlet-mapping>
    <servlet-name>Statistic</servlet-name>
    <url-pattern>/servlet/StatisticServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>UserServlet</servlet-name>
    <url-pattern>/servlet/UserServlet</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>EnvironmentServlet</servlet-name>
    <url-pattern>/servlet/EnvironmentServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>CheckServlet</servlet-name>
    <url-pattern>/servlet/CheckServlet</url-pattern>
  </servlet-mapping>
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
</web-app>